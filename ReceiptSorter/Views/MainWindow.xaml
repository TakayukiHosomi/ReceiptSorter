<Window x:Class="ReceiptSorter.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Receipt Sorter" Height="350" Width="525">
    <Grid>
        <Button Name="ScanButton" Content="スキャン開始" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10" Click="ScanButton_Click"/>
        <Button Name="CheckButton" Content="登録店舗確認" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="390,10,0,0" Click="CheckButton_Click"/>
        <TextBox Name="StatusTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="480" Height="200" Margin="10,40,0,0" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        <ProgressBar Name="ProgressBar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="480" Height="25" Margin="10,250,0,0"  ValueChanged="ProgressBar_ValueChanged"/>
        <TextBlock x:Name="Progress_TextBlock" Margin="99,250,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Text="" Width="50" FontSize="20"/>
    </Grid>
</Window>

